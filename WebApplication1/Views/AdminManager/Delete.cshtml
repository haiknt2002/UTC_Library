@model WebApplication1.Models.Book;

@{
    ViewBag.Title = "Xóa tài liệu";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h4>Bạn có chắc muốn xóa tài liệu này?</h4>
<hr />

<div>

    <div>

        <div class="col-6 offset-3 card">

            <br />
            <div class="form-row form-group text-center">
                <div class="col">
                    <div class="card">
                        <h5>Tiêu đề</h5>
                        <p class="text-muted">@Html.DisplayFor(model => model.BookTitle)</p>
                    </div>
                </div>

                <div class="col">
                    <div class="card">
                        <h5>Thể loại</h5>
                        <p class="text-muted"> @Html.DisplayFor(model => model.BookCategory)</p>
                    </div>
                </div>
            </div>
            <div class="form-row form-group text-center">
                <div class="col">
                    <div class="card">
                        <h5> Tác giả</h5>
                        <p class="text-muted"> @Html.DisplayFor(model => model.BookAuthor)</p>
                    </div>
                </div>

                <div class="col">
                    <div class="card">
                        <h5>Số lượng</h5>
                        <p class="text-muted">@Html.DisplayFor(model => model.BookCopies)</p>
                    </div>
                </div>
            </div>

            <div class="form-row form-group text-center">
                <div class="col">
                    <div class="card">
                        <h5>
                            Nhà xuất bản
                        </h5>
                        <p class="text-muted">
                            @Html.DisplayFor(model => model.BookPub)
                        </p>
                    </div>
                </div>

                <div class="col">
                    <div class="card">
                        <h5>
                            Chủ NXB
                        </h5>
                        <p class="text-muted">
                            @Html.DisplayFor(model => model.BookPubName)
                        </p>
                    </div>
                </div>
            </div>
            <div class="form-row form-group text-center">
                <div class="col">
                    <div class="card">
                        <h5>
                            ISBN
                        </h5>
                        <p class="text-muted">
                            @Html.DisplayFor(model => model.BookISBN)
                        </p>
                    </div>
                </div>

                <div class="col">
                    <div class="card">
                        <h5>
                            Xuất bản
                        </h5>
                        <p class="text-muted">
                            @Html.DisplayFor(model => model.Copyright)
                        </p>
                    </div>
                </div>
            </div>

            <div class="form-row form-group text-center">
                <div class="col">
                    <div class="card">
                        <h5>
                            Ngày thêm
                        </h5>
                        <p class="text-muted">
                            @Html.DisplayFor(model => model.DateAdded)
                        </p>
                    </div>
                </div>

                <div class="col">
                    <div class="card">
                        <h5>
                            Tình trạng
                        </h5>
                        <p class="text-muted">
                            @Html.DisplayFor(model => model.Status)
                        </p>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div type="submit" value="Delete" class="">
                        <button onclick="deleteMessage()" class="btn btn-sm btn-danger" data-toggle='tooltip' title='Delete book'>
                            <div class="fas fa-trash iconop"></div>
                            Xóa
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
    

    <br />
    <div class="btn btn-sm btn-secondary" data-toggle='tooltip' title='Back to book list'>
        <i class="fas fa-long-arrow-alt-left"></i>
        @Html.ActionLink("Quay lại", "Index", null, new { @class = "", style = "text-decoration:none; color: white" })
    </div>
    <br />
    <br />
</div>

@section scripts{
    <script>
        @*Scripts for delete alert*@
        function deleteMessage(){
            alert("Hiện tại không thể xóa!!!!")
        }
    </script>
}
