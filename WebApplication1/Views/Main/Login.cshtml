@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="col-lg-4 col-md-6 col-sm-8 offset-lg-4 offset-md-3 offset-sm-2" style="padding-bottom: 5%; padding-top: 5%;">
    <div class="card shadow-lg border-0 rounded">
        <!-- Tiêu đề đăng nhập -->
        <div class="card-header bg-dark text-light text-center">
            <h5 class="mb-0">Đăng nhập bằng</h5>
        </div>

        <!-- Phần thân card -->
        <div class="card-body p-4">
            <!-- Đăng nhập với Sinh viên -->
            <div class="btn btn-danger btn-block mb-3 d-flex align-items-center justify-content-center login-btn" data-toggle="tooltip" data-placement="right" title="Logged as user">
                <i class="fas fa-user mr-2"></i>
                @Html.ActionLink("Sinh viên", "Login", "User", null, new { style = "text-decoration:none", @class = "text-light" })
            </div>

            <!-- Đăng nhập với Giảng viên -->
            <div class="btn btn-success btn-block d-flex align-items-center justify-content-center login-btn" data-toggle="tooltip" data-placement="right" title="Logged as admin">
                <i class="fas fa-user-cog mr-2"></i>
                @Html.ActionLink("Giảng viên", "Login", "Admin", null, new { style = "text-decoration:none", @class = "text-light" })
            </div>
        </div>
    </div>
</div>
