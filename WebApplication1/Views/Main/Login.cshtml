
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div style="padding-bottom:10%; padding-top:10%" class="col-4 offset-4">
    <div class="card">
        <div class="card-header">Đăng nhập bằng</div>
        <div class="card-body">
            <div class="btn btn-block btn-danger" data-toggle="tooltip" data-placement="right" title="Logged as user">
                <i class="fas fa-user"></i>
                @Html.ActionLink("Sinh viên", "Login", "User", null, new { style = "text-decoration:none", @class = "text-light" })
            </div>
            <div class="btn btn-block btn-success" data-toggle="tooltip" data-placement="right" title="Logged as admin">
                <i class="fas fa-user-cog"></i>
                @Html.ActionLink("Giảng viên", "Login", "Admin", null, new { style = "text-decoration:none", @class = "text-light" })
            </div>
        </div>
    </div>

</div>
