<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Thư Viện UTC</title>
    @*Thư viện *@
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="~/css/lmscustom.css" rel="stylesheet" />
    <script href="../Scripts/modernizr-2.8.3.js"></script>
    <script href="../Scripts/bootstrap.min.js"></script>
    <script href="../Scripts/jquery-3.4.1.min.js"></script>
</head>
<body style="padding:unset">
    <div>
        <div style="background-color:#5cb8;">
            <div style="background-color:#5cb85c; height:8px; width:450px">
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
            <span class="icon">
                <i class="fas fa-book-open"></i>
            </span>
            @Html.ActionLink("Thư viện - UTC", "MenuBorrow", "UserManager", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item btn-sm btn-danger">
                        <i class="fas fa-home"> Home</i>
                    </li>
                    <li class="nav-item btn-sm btn-danger">
                        <i class="fas fa-address-card"> Chi tiết</i>
                    </li>
                    <li class="nav-item btn-sm btn-danger">
                        <i class="fas fa-id-badge"> Liên hệ</i>
                    </li>
                </ul>
                <ul class="navbar-nav justify-content-end" style="padding-right:50px">
                    
                    <li class="" style="padding-left:5px; padding-right:5px">

                        @Html.ActionLink("Yêu cầu", "MenuRequested", "UserManager", null, new { @class = "nav-item btn-sm btn-primary text-light", style = "text-decoration:none;" })
                    </li>
                    <li style="padding-left: 5px; padding-right: 5px ">
                        @Html.ActionLink("Đã mượn", "MenuReceived", "UserManager", null, new { @class = "nav-item btn-sm btn-primary text-light", style = "text-decoration:none;" })
                        
                    </li>
                    <li class="" style="padding-left:5px; padding-right:10px">
                        @Html.ActionLink("Bị từ chối", "MenuRejected", "UserManager", null, new { @class = "nav-item btn-sm btn-primary text-light", style = "text-decoration:none;" })
                        
                    </li>
                </ul>
                <span class="text-light" style="padding-top:1px; padding-right:15px">Welcome back !!</span>
                <ul class="navbar-nav justify-content-end">

                    <li class="nav-item btn btn-sm btn-danger">
                        <i class="fas fa-sign-out-alt"></i>
                        @Html.ActionLink("Đăng xuất", "Logout", "User", null, new { @class = "nav-link", onclick = "return alert('Logged out successfully');", style = "display:inline" })
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    <div style="padding-left:20px; padding-right:20px">
        @RenderBody()
    </div>
    <div>
        
        <footer>
            <div style="" class="card text-center text-white bg-danger">
                <div class="card-header">
                    Cảm ơn đã theo dõi chúng tôi
                </div>
                <div class="card-body">
                    <h5 class="card-title">Nhóm 9</h5>
                    <div style="width: auto;" class="form-group">
                        <span>
                            <i class="fab fa-facebook-square"></i>
                        </span>
                        <span>
                            <i class="fab fa-twitter-square"></i>
                        </span>
                        <span>
                            <i class="fab fa-instagram"></i>
                        </span>
                    </div>
                </div>
                <p>&copy; @DateTime.Now.Year - Thư viện - UTC</p>
            </div>
        </footer>
    </div>
    <div style="background-color:#5cb8;">
        <div style="background-color:#5cb85c; height:8px; width:450px">
        </div>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>